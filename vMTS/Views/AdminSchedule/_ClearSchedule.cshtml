
@{Layout = "";}
@Scripts.Render("~/bundles/admin_Class")

<h2>Clear the Current Schedule</h2>
<h3>A confirmation code has been sent to <strong>@ViewBag.User</strong></h3>
<div class="well">
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "form_Confirmation", @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label class="lead">Confirmation Code</label>
            <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-thumbs-up"></span>
                @Html.TextBox("code","", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm" data-trigger="hover" data-container="body" data-toggle="popover" data-placement="right" data-content="This will clear the current schedule." data-original-title="" title="Clear Current Schedule">Confirm Now</button>
        </div>

    }
    </div>

<div id="ClearScheduleAction" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Clear Current Schedule</h4>
            </div>
            <div class="modal-body">
                <div id="before">
                    <h1>Are you sure you want to clear the schedule?</h1>
                    <p class="lead">This will clear all entries from the current schedule.</p>
                </div>
                <div id="after" aria-hidden="true">
                    <p id="text" class="lead"></p>
                </div>
            </div>
            <div class="modal-footer">
                <div id="before_footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button id="form_ClearSchedule" type="button" class="btn btn-primary">Submit</button>
                </div>
                <div id="after_footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>