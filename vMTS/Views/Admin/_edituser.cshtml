@model vMTS.Models.UserList_vw

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="well well-sm">
    <h2>Edit User</h2>

    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "form_EditUser", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>UserList_vw</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label sr-only col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label sr-only col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("RoleName", new SelectList((System.Collections.IEnumerable)ViewData["RoleList"], "Value", "Text"), "Role", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
