
@{Layout = "../Shared/_LayoutAdmin.cshtml";}


<h2>@ViewBag.Title</h2>
<h3>
    @ViewBag.UserName
</h3>
<h3>@ViewBag.Role</h3>

<div class="container-fluid">
    <div class="row">
        <div id="allusers" class="col-xs-12 col-sm-10 col-md-6">@Html.Partial("_Users")</div>
        <div class="col-xs-12 col-sm-10 col-md-6">@Html.Partial("_adduser", new vMTS.Models.UsersModel())</div>
    </div>

    <div class="row">
        <div id="change_users">

        </div>
    </div>
</div>

<div id="UsersAlert" class="modal bs-modal-sm">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <p class="lead" id="alertText"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
