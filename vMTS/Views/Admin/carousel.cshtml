@model vMTS.Models.Carousel

@{Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}

@Scripts.Render("~/bundles/admin_Carousel")

@{var itemList = @Model.CurrentImages.ToList();}
<div class="container-fluid">
    <div class="row">
        @if (itemList.Count() >= 1)
        {
                foreach (var i in itemList)
                {
                    @Html.Hidden("name",i.ImgName)
                    @Html.Hidden("caption",i.ImgCaption)
                    <div class="col-xs-6 col-md-3">
                        <div class="thumbnail">
                            <img src="~/images/carousel/@i.ImgName" alt="@i.ImgCaption">
                            <label class="sr-only control-label">Sequence</label>
                            <div class=""><input type="number" id="seq_@i.ImgId" name="@i.ImgId" placeholder="Sequence" min="1" max="100" value="@i.sequence" data-trigger="hover" data-container="body" data-toggle="popover" data-placement="right" data-content="The order in which the carousel will rotate. Numbers only!!" data-original-title="" title="Rotation Sequence" /></div>
                            <div class="caption">
                                <input type="button" value="Delete" id="@i.ImgId" name="delete" class="btn btn-primary btn-xs"/>
                            </div>
                        </div>
                    </div>
                }
        }
        else
        {
            <div class="col-xs-6 col-md-3">No images were found</div>
        }
    </div>
    <div class="row">
        <div class="col-xs-6 col-md-3">
            @Html.Partial("_addimage")
        </div>
    </div>
</div>

<div id="ConfirmDelete" class="modal bs-modal-sm">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Confirm Delete Request</h4>
            </div>
            <div id="deleteForm" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Confirm</button>
            </div>
        </div>
    </div>
</div>
