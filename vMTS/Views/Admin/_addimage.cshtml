@model vMTS.Models.Carousel
@{Layout = null;}
<div class="form-horizontal">
    <h2>Add Image</h2>
    <hr />
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "form_NewImage", @class = "form-horizontal", role = "form" }))
    {
        @*@Html.AntiForgeryToken()*@
        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 sr-only control-label">Image</label>
                <div class="col-md-10">
                    <input type="file" id="Image" name="Image"/><div id="ImgAlert" class="alert alert-danger hidden" role="alert">Select an image</div>

                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 sr-only control-label">Image Caption</label>
                <div class="col-md-10"><input type="text" id="caption" name="caption" placeholder="Image Caption" /></div>
            </div>
        </div>
    <div class="form-group">
        <div class="col-md-10">
            <label class="col-md-2 sr-only control-label">Order Sequence</label>
            <div class="col-md-10" data-trigger="hover" data-container="body" data-toggle="popover" data-placement="right" data-content="The order in which the image will show in the carousel. Numbers only!!" data-original-title="" title="Rotation Sequence"><input type="number" id="seq" name="seq" placeholder="Order Sequence" min="0" value="0" /></div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <div class="col-md-10"><input type="submit" value="Save" class="btn btn-info" /></div>
        </div>
    </div>

    }
</div>

