@model IEnumerable<vMTS.Models.UserList_vw>

@{Layout = "";}
<div class="well well-sm">
    @if (Model.ToList().Count() >= 1)
    {
        <h2>Current Users</h2>
        <hr />
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    @*<th>#</th>*@
                    <th>Role</th>
                    <th>Email</th>
                    <th>Last Activity</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @*@{int n = 1;}*@
                @foreach (var i in Model)
                {
                    <tr>
                        @*<td>@n</td>*@
                        <td>@i.RoleName</td>
                        <td>@i.UserName</td>
                        <td>@i.LastActivityDate</td>
                        <td>
                            @*<input type="button" id="edit_@i.UserName" name="@i.UserName" value="Edit" class="btn btn-info btn-xs" />
    @Html.ActionLink("Edit", "_edituser", "admin", new { id = @i.UserName }, new { @class = "btn btn-info btn-xs", @title = "Edit User" })
                            &nbsp;
                        @Html.ActionLink("Delete", "_deleteuser", "admin", new { id = @i.UserName }, new { @class = "btn btn-info btn-xs", @title = "Delete User" })*@
                    </td>
                </tr>
                    //n = n + 1;
                }
            </tbody>
        </table>
    }
</div>